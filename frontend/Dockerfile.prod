FROM ubuntu/nginx

EXPOSE 80

RUN apt update && apt upgrade -y

WORKDIR /app

RUN apt install nodejs npm curl -y

RUN npm install -g yarn

RUN npm install -g pm2

COPY package.json package.json

RUN yarn install

COPY . /app

RUN yarn run build

COPY nginx.conf /etc/nginx/nginx.conf

ENTRYPOINT ["bash", "start.sh"]
